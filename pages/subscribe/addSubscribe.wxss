/* pages/subscribe/addSubscribe.wxss */
.weui-cells_form .weui-cell{border-bottom:1rpx solid #e0e0e0;line-height:30px;}
.weui-cells .weui-cell .weui-label{display: inline-block;padding-left:5px;width: 5em;margin-right: 20px;}
.sub-form{padding:50rpx 7.5px;background-color: #fff;}
.sub-form view,.btn{width: 100%;height:90rpx;line-height: 90rpx;text-align: center;background-color: #e6be78;color:#fff;font-size: 16px;}
.weui-actionsheet__cell image{width: 16px;}
#iosActionsheet,#iosActionsheet2{text-align: center;}
#iosActionsheet .weui-actionsheet__title,#iosActionsheet2 .weui-actionsheet__title{line-height:65px;color: #888;background-color: #fff;}
#iosActionsheet .weui-actionsheet__menu,#iosActionsheet2 .weui-actionsheet__menu{line-height: 40px;border-top:1px solid #e5e5e5;background-color: #fff;}
#iosActionsheet .weui-actionsheet__action,#iosActionsheet2 .weui-actionsheet__action{margin-top:5px;background-color: #fff;padding: 6px 0;}
#iosActionsheet2 .weui-actionsheet__menu .weui-actionsheet__cell{border-top:1px solid #e5e5e5;}
.weui-mask {
  position: fixed;
  z-index: 1000;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
}
.weui-actionsheet {
  position: fixed;
  left: 0;
  bottom: 0;
  z-index: 5000;
  width: 100%;
  background-color: #efeff4;
}
.title{padding: 15rpx 0;text-align: center;color: #e6be78;font-size:18px;
  background-image: url(https://ajls3lyu.shop.qijianshen.xyz/uploads/sub_bgi.jpg);
  background-repeat: no-repeat;
  background-position: center;
  background-size: cover;
}
swiper{padding:40rpx 15rpx;}
swiper-item{width: 30%;padding:40rpx;box-sizing: border-box;}
.swiper-item.active{padding:20rpx;overflow: visible;}
.swiper-item.active .img{border: 2px solid #e6be78;transform:scale(1.2); }
swiper-item .img{ width: 100%;height: 0px;padding-bottom: 100%;position: relative;border-radius: 50%;overflow: hidden;}
swiper-item image{width: 100%;height: 100%;position: absolute;}
.technician_intr{text-align: center;padding:25rpx 0 65rpx 0;}
.technician_intr .name{font-size: 18px;margin-bottom: 5rpx;}
.technician_intr .time{font-size: 14px;color:#bc222c;margin-bottom: 5rpx;}
.technician_intr .txt{font-size: 14px;color: #9c9c9c;padding:0 80rpx;}
/* 到店时间 */
.timetable{position: absolute;left: 0;bottom: 0;z-index: 5000;background-color: #fff;}
.arrival_time .weui-grids,.arrival_hours .weui-grids{border-left:0;}
.arrival_hours{margin-bottom:20rpx;}
.arrival_time .weui-grid,.arrival_hours .weui-grid{width:16.666666vw;height:16.666666vw;display: flex;align-items: center;justify-content: center;}
.arrival_time .weui-grid{background-color: #fff6ec;color: #e6be78;}
.arrival_hours  .weui-grid{background-color: #fff;}
.weui-grids.arrival_time .weui-grid.active{background-color: #e6be78;}
.weui-grids.arrival_time .weui-grid.active .weui-grid__label{color: #fff;}
.arrival_time .weui-grid .weui-grid__label{color: #e6be78;}
.arrival_time .weui-grid image,.arrival_hours .weui-grid image{width:25rpx;height: 25rpx;}
.arrival_hours .weui-grid .weui-grid__label{position: relative;overflow: visible;}
.arrival_hours .weui-grid .weui-grid__label icon{position: absolute;right:-10px;top: -10px;}
.arrival_hours .weui-grid.active .weui-grid__label icon{display: block;}
.arrival_hours .weui-grid .weui-grid__label icon{display: none;}
.arrival_hours .weui-grid.overtime{background-color:#f5f5f5;}
.arrival_hours .weui-grid.overtime .weui-grid__label{color: #9c9c9c;}