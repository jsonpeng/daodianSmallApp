/* pages/usercenter/card.wxss */
page{background-color: #fff;}
.user-info{background-color: #fff;}
.card{width: 100%;background-color: #333230;padding: 0 25rpx;border-radius:10rpx;color: #e6be78;margin-top: 25px;padding-top: 22rpx;padding-bottom: 22rpx;}
.card .tip{font-size: 14px;}
.card .tip image{width:14px;margin-right: 5px;}
.card .portrait{width:100rpx;height: 100rpx;border:2px solid #e6be78;border-radius: 50%;overflow: hidden;margin: 0 auto;margin-top:-60px;margin-bottom:15rpx;}
.card .portrait image{width: 100%;}
.card .name{text-align: center;}
.card .growth_value{text-align: right;font-size: 16px;margin-bottom:10rpx;}
.card .growth_value text{font-size: 12px;}
.vip{text-align: center;margin-top:25rpx;margin-bottom: 35rpx;}
.vip image{width:55rpx;margin-right: 10rpx;}
.weui-progress .weui-progress__bar{border-radius:100rpx;overflow: hidden;}
.title{background-color: #fff;}
.title .weui-cell__ft{color: #333;}
.line{margin:0 7.5px;border-bottom: 1px solid #f3f3f3;}
.privilege{display: flex;justify-content: space-between;background-color:#fff;}
.privilege image{width: 45rpx;margin-bottom: 10rpx;}
.privilege .p-item{text-align: center;width: 200rpx;height: 200rpx;background-color:#fff6ec;border-radius:20rpx;display: flex;flex-direction:column;align-items:center;justify-content:center;font-size: 14px;}
.privilege .p-item.next-level{background-color:#f5f5f5;}
.sub-form{padding:50rpx 7.5px;background-color: #fff;}
.sub-form view{width: 100%;height:90rpx;line-height: 90rpx;text-align: center;background-color: #e6be78;color:#fff;font-size: 16px;}