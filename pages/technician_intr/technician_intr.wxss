/* pages/technician_intr/technician_intr.wxss */
page{background-color:#f5f5f5;}
.technician_detail{width: 100%;padding:0 15rpx;box-sizing: border-box;background-color:#f5f5f5;}
.weui-cell{padding: 0;}
swiper{width: 100%;background-color: #fff;}
swiper .img{display: block;width: 100%;}
.intr{width: 100%;text-align: center;background-color: #fff;}
.intr .name{font-size: 16px;color: #333;}
.intr .title,.intr .add{font-size: 14px;color: #9c9c9c;}
.intr .add{display:flex;align-items: center;justify-content: center;border-bottom: 1px solid #ececec;padding-bottom: 20rpx;}
.location{width: 25rpx;margin-right: 10rpx;}
.about{width: 100%;display:flex; justify-content:center;background-color: #fff;padding:7.5px;}
.about image{width: 35rpx;margin-bottom: 15rpx;}
.about-item{flex: 1;display: flex;flex-direction:column;align-items:center;font-size: 14px;color: #333;}
.sub-form{padding:30rpx 0;}
.sub-form view,.btn{width: 100%;height:90rpx;line-height: 90rpx;text-align: center;background-color: #e6be78;color:#fff;font-size: 16px;}
.head{font-size: 14px;color: #9c9c9c;margin-bottom: 20rpx;}
.info{background-color: #fff;color: #333;height: 65rpx;line-height: 65rpx;border-top: 1px solid #e0e0e0;padding:0 15rpx;}
.store{border-bottom: 1px solid #e0e0e0;}
.info image{width: 30rpx;}
.synchronization {padding:0 15rpx;padding-top: 10rpx;background-color: #fff;}