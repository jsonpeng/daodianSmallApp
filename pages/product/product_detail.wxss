/* pages/product/p.wxss */
.title{flex-direction:column;align-items:flex-start;background-color: #fff;}
.title .title{font-size: 16px;}
.title .name{font-size: 14px;margin-bottom: 10rpx;}
.title .pic {width: 100%;}
.title .pic image{width: 100%;}
.title .line{width: 100%;border-top: 1px solid #c3c3c3;margin: 20rpx 0;}
.title .t-head{font-size: 18px;}
.program{border-bottom: 1px solid #f1f1f1;padding:20rpx 0;width: 100%;}
.program .name{font-size: 14px;font-weight: bold;}
.program .date,.program .times,.program .text{font-size: 14px;color: #9c9c9c;line-height: 1.7em;}
.weui-cell{box-sizing: border-box;display: flex;flex-direction:column;align-items:flex-start;background-color:#fff;}
view{width: 100%;font-size: 14px;color: #333;line-height: 1.7em;}
image{width: 100%;display: block;margin-top:15rpx;}