/* pages/publish/publish.wxss */
page{background-color:#fff;}
.head{font-size:14px;}
.head .weui-cell__ft{color: #e6be78;}
.text .weui-cell__bd{padding:0 10rpx;}
.text .weui-cell__bd textarea{width: 100%;height:200rpx;}
.weui-mask {
  position: fixed;
  z-index: 1000;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
}
.weui-actionsheet {
  position: fixed;
  left: 0;
  bottom: 0;
  z-index: 5000;
  width: 100%;
  background-color: #fff;
}
.title{padding: 15rpx 0;text-align: center;color: #e6be78;font-size:18px;
  background-image: url(https://ajls3lyu.shop.qijianshen.xyz/uploads/sub_bgi.jpg);
  background-repeat: no-repeat;
  background-position: center;
  background-size: cover;
}
.sub-form view,.btn{width: 100%;height:90rpx;line-height: 90rpx;text-align: center;background-color: #e6be78;color:#fff;font-size: 16px;}
/* 服务选择 */
.services .product-wrapper{background-color:#f5f5f5;}
.services .product-wrapper .product-item2{background-color:#fff;padding:5px;}
.services .weui-bar__item_on{color:#e6be78;}
.services .weui-bar__item_on text{border-bottom: 1px solid #e6be78;}
.services .weui-navbar{border-bottom:0;margin-bottom: 5px;}
 .zcjy-product-check .price{height: 28px;line-height: 28px;} 
.zcjy-product-check .price view:nth-child(1) {
  color: #bc222c;
  font-size: 18px;
  margin-right: 20px;
}
.zcjy-product-check .price view:nth-child(1) text{font-size:14px;color: #9c9c9c;text-decoration: line-through;margin-left: 20rpx;}
.zcjy-product-check .price view:nth-child(2){
  color:#9c9c9c;
  font-size: 14px;
}
.order-item{margin-bottom:0;}
 .order-item.active .zcjy-product-check{background-color:#fff6ec;} 
 .share-link {
  padding: 5px 0;
  margin: 0 7.5px 6.5px 7.5px;
  background-color: #f0f0f0;
  font-size: 14px;
}
.share-link .weui-cell__hd {
  width: 35px;
  height: 35px;
  margin-right: 6px;
}
 .share-link .weui-cell__hd image {
  width: 100%;
  height: 100%;
}